<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Idea - Greenwich</title>

  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <link href="../../../vendor/aos/aos.css" rel="stylesheet">
  <link href="../../../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="../../../vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="../../../vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="../../../vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="../../../vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="../../../vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <link href="../../../css/style.css" rel="stylesheet">
</head>

<body>

    <!-- Start Header -->
  <%- include('../../partials/user/header')%>
  <!-- End Header -->

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <%- include('../../partials/user/breadcrumbs')%>
    <!-- End Breadcrumbs -->

    <!-- ======= Idea Section ======= -->
    <section id="idea" class="idea">
        <div class="container" data-aos="fade-up">
  
          <div class="row">
  
            <div class="col-lg-8 entries">
              <% ideas.forEach(idea => {
                %>
                <article class="entry">
                
                <div class="entry-img">
                  <img src="https://source.unsplash.com/user/c_v_r" alt="" class="img-fluid">
                </div>
  
                <h2 class="entry-title">
                    <a href="idea/<%= idea._id %>"><%= idea.title %></a>
                  </h2>
    
                  <div class="entry-meta">
                    <ul>
                      <li class="d-flex align-items-center"><i class="bi bi-person"></i><a href="profile/<%= idea.userId._id %>"> <%= idea.userId.fullName %> </a></li>
                      <li class="d-flex align-items-center"><i class="bi bi-clock"></i><%= idea.updatedAt.toLocaleString('default') %></time></li>
                      <li class="d-flex align-items-center"><i class="bi bi-chat-dots"></i> <a href="idea/<%= idea._id %>">8 Comments</a></li>
                    </ul>
                  </div>
    
                  <div class="entry-content">
                    <%= idea.description %>
                  <div class="read-more">
                    <a href="idea/<%= idea._id %>">Read More</a>
                  </div>
                </div>
  
              </article><!-- End blog entry -->
                <%
              }); %>
              
  
              <div class="idea-pagination">
                <ul class="justify-content-center">
                  <li><a href="#">1</a></li>
                  <li class="active"><a href="#">2</a></li>
                  <li><a href="#">3</a></li>
                </ul>
              </div>
  
            </div><!-- End blog entries list -->
  
            <div class="col-lg-4">
  
              <%- include('../../partials/user/sidebar') %>
  
            </div><!-- End blog sidebar -->
  
          </div>
  
        </div>
      </section><!-- End Blog Section -->
    </main>

  <!-- ======= Footer ======= -->
  <%- include('../../partials/user/footer')%>
  <!-- End Footer -->

  <!-- js -->
  <script src="../../../vendor/purecounter/purecounter.js"></script>
  <script src="../../../vendor/aos/aos.js"></script>
  <script src="../../../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../../../vendor/glightbox/js/glightbox.min.js"></script>
  <script src="../../../vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="../../../vendor/swiper/swiper-bundle.min.js"></script>
  <script src="../../../javascript/main.js"></script>

</body>

</html>