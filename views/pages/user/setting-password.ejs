<body>

    <!-- Start Header -->
  <% include('../../partials/user/header') %>
  <!-- End Header -->

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <% include('../../partials/user/breadcrumbs') %>
    <!-- End Breadcrumbs -->

     
     <section id="setting-password" class="setting-password">
      <div class="container" data-aos="fade-up">
        <div class="main-body">
          <div class="row">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="../images/coment/coment1.jpg" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4>Tran Hieu</h4>
                      <p class="text-secondary mb-1">Full Stack Developer</p>
                      <p class="text-muted font-size-sm">114 Nguyen Xi, Q.Binh Thanh, Sai Gon, Viet Name</p>
                      <button class="btn btn-primary">Follow</button>
                      <button class="btn btn-outline-primary">Facebook</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>

            <div class="col-md-8">
                <div class="card mb-3">
                    <form class="row g-3 needs-validation" action="/setting/setting-password/<%= user._id %>" method="POST" novalidate>
                      <div class="card-tools d-flex justify-content-between">
                          <h2>Setting Password</h2> 
                      </div>   
                      <hr>
                      <div class="setting-box">  
                        <div class="setting-group">
                          <div class="mb-3">
                              <i class="bi bi-file-lock2-fill"></i>
                              <label for="name">Password</label>
                              <input type="password" id="inputValidationEx2" name="password" class="form-control validate" placeholder="Enter Password" required>
                          </div>
                          <div class="mb-3">
                            <i class="bi bi-file-lock2-fill"></i>
                            <label for="name">Re-Password</label>
                            <input type="password" class="form-control validate" id="inputValidationEx3" name="rePassword" placeholder="Enter Re-Password" required>
                          </div>
                        </div>
                        <div class="col-md-5">
                          <div class="alert alert-warning password-alert" role="alert">
                            <ul>
                              <li class="requirements leng"><i class="fas fa-check green-text"></i><i class="fas fa-times red-text"></i> Your password must have at least 6 chars.</li>
                              <!-- <li class="requirements big-letter"><i class="fas fa-check green-text"></i><i class="fas fa-times red-text"></i> Your password must have at least 1 big letter.</li>
                              <li class="requirements num"><i class="fas fa-check green-text"></i><i class="fas fa-times red-text"></i> Your password must have at least 1 number.</li>
                              <li class="requirements special-char"><i class="fas fa-check green-text"></i><i class="fas fa-times red-text"></i> Your password must have at least 1 special char.</li> -->
                              <li class="requirements equal"><i class="fas fa-check green-text"></i><i class="fas fa-times red-text"></i> Your password must have be equal to re-password.</li>
                            </ul>
                          </div>
                        </div>
                        <div class="input-box">
                          <div class="col-12">
                              <button class="btn btn-primary" type="submit">Change Password</button>
                          </div>
                      </div>
                    </form>
                </div>
            </div>
        </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <% include('../../partials/user/footer') %>
  <!-- End Footer -->

