<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Idea - Greenwich</title>

  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <link href="../../../vendor/aos/aos.css" rel="stylesheet">
  <link href="../../../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="../../../vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="../../../vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="../../../vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="../../../vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="../../../vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <link href="../../../css/style.css" rel="stylesheet">
</head>

<body>

    <!-- Start Header -->
    <%- include("../../partials/user/header") %>
  <!-- End Header -->

    <main id="main">

        <!-- ======= Breadcrumbs ======= -->
        <%- include("../../partials/user/breadcrumbs")%>
        <!-- End Breadcrumbs -->

        <!-- ======= Submission Section ======= -->
        <section id="submission" class="submission">
        <div class="container" data-aos="fade-up">

            <div class="row">

                <div class="col-lg-8">
                    <div class="row submission-cards">
                        <div class="col-12 col-lg-6 col-xl-4">
                            <% submissions.forEach(submission => {
                                %>
                                <a href="/submission/detail/<%= submission._id%>" class="card">
                                    <img src="https://source.unsplash.com/user/c_v_r" class="card-img-top">
                                    <div class="card-body">
                                        <h5 class="card-title"><%= submission.name%></h5>
                                        <div class="card-date">
                                            <i class="bi bi-clock"></i>
                                            Closure date: 
                                            <time datetime="<%= submission.closureDate %>"><%= submission.closureDate %></time>
                                        </div>
                                        <p class="card-text">
                                            <%= submission.description %>
                                        </p>
                                        <div class="card-more">
                                            <p class="create-at"></p>
                                        </div>
                                    </div>
                                </a>
                                <%
                            }) %>
                            
                        </div>  
                    </div>
                    <!-- Submission card -->
                    <div class="submission-pagination">
                        <ul class="justify-content-center">
                            <li><a href="#">1</a></li>
                            <li class="active"><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                        </ul>
                    </div>

                </div><!-- End blog entries list -->

                <div class="col-lg-4">

                    <!--Sidebar-->
                    <%- include("../../partials/user/sidebar")%>
                    <!-- End sidebar -->

                </div><!-- End blog sidebar -->

            </div>

        </div>
        </section><!-- End Blog Section -->
    </main>
  <!-- ======= Footer ======= -->
  <%- include("../../partials/user/footer")%>
  <!-- End Footer -->

  <!--Back to top-->
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>


  <!-- js -->
  <script src="../../../vendor/purecounter/purecounter.js"></script>
  <script src="../../../vendor/aos/aos.js"></script>
  <script src="../../../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../../../vendor/glightbox/js/glightbox.min.js"></script>
  <script src="../../../vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="../../../vendor/swiper/swiper-bundle.min.js"></script>
  <script src="../../../vendor/ckeditor/ckeditor.js"></script>
  <script src="../../../javascript/main.js"></script>

</body>

</html>