<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Idea - Greenwich</title>

  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

  <link href="../../../vendor/aos/aos.css" rel="stylesheet">
  <link href="../../../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="../../../vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
  <link href="../../../vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
  <link href="../../../vendor/glightbox/css/glightbox.min.css" rel="stylesheet">
  <link href="../../../vendor/remixicon/remixicon.css" rel="stylesheet">
  <link href="../../../vendor/swiper/swiper-bundle.min.css" rel="stylesheet">

  <link href="../../../css/style.css" rel="stylesheet">
</head>

<body>

    <!-- Start Header -->
    <%- include("../../partials/user/header") %>
  <!-- End Header -->

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <%- include("../../partials/user/breadcrumbs") %>
    <!-- End Breadcrumbs -->

     
     <section id="idea" class="profile">
      <div class="container" data-aos="fade-up">
        <div class="main-body">
          <div class="row">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                    <img src="../images/coment/coment1.jpg" alt="Admin" class="rounded-circle" width="150">
                    <div class="mt-3">
                      <h4><%= user.fullName %></h4>
                      <p class="text-secondary mb-1"></p>
                      <% user.contact.addresses.forEach(address => {
                        %>
                        <p class="text-muted font-size-sm"><%= address.street%>, <%= address.city%>, <%= address.country%> </p>
                        <%
                      }); %>
                      
                      <button class="btn btn-primary">Follow</button>
                      <button class="btn btn-outline-primary">Facebook</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.fullName%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Username</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%= user.username %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    <% user.contact.emails.forEach(email => {
                      %>
                      <div class="col-sm-9 text-secondary">
                      <%= email.email %>
                      </div>
                      <%
                    }) %>

                    
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Role</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <% user.roles.forEach(role => {
                        for(let i = 0; roles[i] != undefined; i++){
                          if (role.roleId.toString() == roles[i]._id.toString()){
                            %>
                            <p><%= roles[i].name %></p>
                            <%
                            break;
                          }
                        }
                      }); %>
                       
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Department</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%
                      for(let i = 0; departments[i] != undefined; i++){
                        if(user.departmentId.toString() == departments[i]._id.toString()){
                          %>
                          <%= departments[i].name%>
                          <%
                        }
                      }
                      %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Phone</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <%
                      user.contact.phones.forEach(phone => {
                        %>
                        <p><%= phone.phone %></p>
                        <%
                      });
                      %>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                      <% user.contact.addresses.forEach(address => {
                        %>
                        <p class="text-muted font-size-sm"><%= address.street%>, <%= address.city%>, <%= address.country%> </p>
                        <%
                      }); %>
                    </div>
                  </div>
                  <hr>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <section class="breadcrumbs">
              <div class="container">
                <h3>Hieu's Idea</h3>
              </div>
            </section>
          </div>
        </div>
    </div>
    </section>

  </main><!-- End #main -->

  <!-- ======= Footer ======= -->
  <%- include("../../partials/user/footer")%>
  <!-- End Footer -->

  <!--Back to top-->
  <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>


  <!-- js -->
  <script src="../../../vendor/purecounter/purecounter.js"></script>
  <script src="../../../vendor/aos/aos.js"></script>
  <script src="../../../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="../../../vendor/glightbox/js/glightbox.min.js"></script>
  <script src="../../../vendor/isotope-layout/isotope.pkgd.min.js"></script>
  <script src="../../../vendor/swiper/swiper-bundle.min.js"></script>
  <script src="../../../vendor/ckeditor/ckeditor.js"></script>
  <script src="../../../javascript/main.js"></script>

</body>

</html>